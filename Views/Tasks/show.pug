extends ../base

block content
    .row.justify-content-center.mb-3
        .col-lg-8
            .card
                .card-header
                    h3= task.title
                .card-body
                    h5.card-title= task.title
                    p.card-text= task.description
                    if task.concluded
                        p.card-text Concluída
                    else
                        p.card-text Não concluida
                    a.btn.btn-primary(href="/tasks") Voltar