extends ../base

block content
    .row.justify-content-center.mb-3
        .col-lg-4
            if message
                .alert.alert-success= message
            form(action=`/tasks/${task.id}/edit` method="POST")
                include _form
                .btn-group(role='group')
                    a.btn.btn-primary(role='button' href='/tasks') Voltar
                    button.btn.btn-success(type='submit') Atualizar 
                    button.btn.btn-danger(type='reset') Limpar